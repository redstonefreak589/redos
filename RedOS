--Variables (For random stuff)
local yPos = 3
local xPos = 1

--Functions
function setColors(backColor, textColor)
	term.setBackgroundColor(backColor)
	term.setTextColor(textColor)
end

function printY(text, yPos)
	term.setCursorPos(1, yPos)
	print(text)
end

function centerPrint(text, yPos)
  w, h = term.getSize()
  term.setCursorPos(math.floor(w - #text)/2+.5, yPos)
  write(text)
end

--Main Code
setColors(colors.white, colors.cyan)
term.clear()
centerPrint("Welcome To RedOS!", 1)
paintutils.drawLine(1, 2, w, 2, colors.blue)
setColors(colors.white, colors.cyan)
centerPrint("RedOS Desktop", 8)
sleep(2)
printY("RedOS Shell", 2)
term.setCursorPos(1,3)
write("> ")
input = read()
printY("Feature not yet added!", yPos+1)


